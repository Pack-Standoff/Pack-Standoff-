  <script>
  
    function voltarParaPaginaAnterior() {
      if (window.history.length > 1) {
        window.history.back();
      } else {
        window.location.href = "https://pack-standoff.vercel.app/Pack%20So2.Html";
      }
    }

    function redirecionarParaHome() {
      window.location.href = "https://pack-standoff.vercel.app/Pack%20So2.Html";
    }

    function redirecionarParaConteudo() {
      window.location.href = "https://pack-standoff.vercel.app/Conte%C3%BAdo.html";
    }

    function redirecionarParaTabela() {
      window.location.href = "https://pack-standoff.vercel.app/Tabela.html";
    }
    
     var currentAudio = null;
         var audioToPause = null;

         function playAudio(audioNumber) {
         var audio = document.getElementById("audio" + audioNumber);
           
         if (currentAudio !== null && currentAudio !== audio) {
         currentAudio.pause();
         currentAudio.currentTime = 0;
       }
         if (audio.paused) {
         audio.play();
         currentAudio = audio;
         audioToPause = audio;
       } else {
         audio.pause();
         audio.currentTime = 0;
         currentAudio = null;
       }
       }

        function pauseAudio() {
        if (audioToPause !== null) {
        audioToPause.pause();
        audioToPause.currentTime = 0;
        currentAudio = null;
        audioToPause = null;
      }
      }
        document.addEventListener('contextmenu', function(e) {
        e.preventDefault();
    });
        function hoverSeason(element) {
        element.style.backgroundImage = "url('http://tinyurl.com/4868vxyx')";
    }

    function unhoverSeason(element) {
        element.style.backgroundImage = "url('http://tinyurl.com/5n75dkx2')";
    }
    function toggleFiltro() {
  var opcoesFiltro = document.getElementById("opcoesFiltro");
  if (opcoesFiltro.style.display === "none" || opcoesFiltro.style.display === "") {
    opcoesFiltro.style.display = "block";
  } else {
    opcoesFiltro.style.display = "none";
  }
}
  </script>
